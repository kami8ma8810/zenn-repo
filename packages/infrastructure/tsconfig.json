{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@domain/*": ["../domain/src/*"],
      "@application/*": ["../application/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "../domain" },
    { "path": "../application" }
  ]
}