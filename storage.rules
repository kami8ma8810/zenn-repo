rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    function isImageFile() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024; // 5MB以下
    }

    // ユーザーアバター画像
    match /users/{userId}/avatar {
      allow read: if true;
      allow create: if isOwner(userId) && isImageFile() && isValidSize();
      allow update: if isOwner(userId) && isImageFile() && isValidSize();
      allow delete: if isOwner(userId);
    }

    // 投稿画像
    match /posts/{postId}/image {
      allow read: if true;
      allow create: if isSignedIn() && isImageFile() && isValidSize();
      allow update: if isSignedIn() && isImageFile() && isValidSize();
      allow delete: if isSignedIn();
    }
  }
}